<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/program_list_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/questions_list_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="24sp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <ImageView
            android:id="@+id/questions_list_single_item_placeholder"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/placeholder_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@drawable/questions_list_image_view"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/questions_list_single_item_title"
        style="@style/questions_list_single_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        />

    <TextView
        android:id="@+id/questions_list_single_item_year"
        style="@style/questions_list_single_item_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year..."
        />

        <TextView
            android:id="@+id/questions_list_single_item_note"
            style="@style/questions_list_single_item_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note..."
            />

</LinearLayout>