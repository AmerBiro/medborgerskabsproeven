<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questions_list_single_item_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layout_marginLeft="24sp"
    android:layout_marginRight="24sp"
    android:padding="10dp"
    android:background="@drawable/questions_list_background"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/questions_list_single_item_year"
        style="@style/questions_list_single_item_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year..." />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/questions_list_single_item_placeholder"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/placeholder_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@drawable/questions_list_image_view"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/questions_list_single_item_title"
        style="@style/questions_list_single_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title" />

    <TextView
        android:id="@+id/questions_list_single_item_note"
        style="@style/questions_list_single_item_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note..." />

</LinearLayout>